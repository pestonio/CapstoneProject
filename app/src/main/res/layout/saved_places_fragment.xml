<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/empty_saved_places_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:contentDescription="@string/no_places_saved_in_list"
        android:src="@drawable/ic_add_location_black_48dp"
        android:tint="@color/iconTint" />

    <TextView
        android:id="@+id/empty_saved_places_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/empty_saved_places_icon"
        android:layout_centerInParent="true"
        android:layout_marginTop="24dp"
        android:contentDescription="@string/empty_saved_places"
        android:text="@string/empty_saved_places" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/saved_places_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>